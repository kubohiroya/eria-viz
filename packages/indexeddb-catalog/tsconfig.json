{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "../../node_modules"]
}
